<template name="grid">
  <view class="grid" key="grid">
    <view bindtap="{{ onItemTap }}" wx:for="{{ list }}" key="{{ item.entitle }}" class="grid-item" hover-class="weui-cell_active" data-index="{{ index }}">
      <view class="grid-item-wrapper">
        <image src="{{ item.icon }}" class="grid-icon" mode="aspectFit" />
        <text class="grid-text">{{ item.title }}</text>
      </view>
    </view>
  </view>
</template>