.container {
  height: 100vh;
  box-sizing: border-box;
}

.module {
  background: var(--weui-BG-2);
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

/* 金额框 */
.bill__amount {
  font-size: 74rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bill__amount-num {
  flex: 1;
  height: 100rpx;
  letter-spacing: 4rpx;
  padding: 0 8rpx;
}

.bill__amount-date {
  font-size: 14px;
  background: var(--THEME);
  color: #FFFFFF;
  padding: 1px 10px;
  border-radius: 20px;
  height: 26px;
  line-height: 26px;
}

/* 类型选择框 */
.bill__category-box {
  height: 190rpx;
  padding: 30rpx 0 30rpx 30rpx;
  box-sizing: border-box;
  /* background: blue; */
  white-space: nowrap;
  display: flex;
}

.bill__category {
  width: 112rpx;
  height: 122rpx;
  border: 4rpx solid transparent;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.bill__category image {
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  border-radius: 50%;
}

.bill__category text{
  font-size: 11px;
  color: #999999;
}
.bill__category.selected text {
  color: var(--THEME);
}

/* 属性选择栏 */
.bill__attr-box {
  padding: 0;
}

.flex__cell {
  display: flex;
  align-items: center;
  line-height: 34px;
}

.cell-label {
  flex-shrink: 0;
}
.cell-value {
  margin-left: 20rpx;
}

.avatar {
  margin-left: 10rpx;
}

/* 备注输入框 */
.bill__remark-input {
  padding: 0 30rpx;
  /* height: 28rpx; */
} 