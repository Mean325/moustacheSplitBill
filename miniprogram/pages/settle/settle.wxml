<!-- 群组列表管理 -->
<view class="container">
  <mp-cells class="solution">
    <mp-cell bindtap="toSolution" link value="查看全员结算方案">
      <image slot="icon" class="cell__icon" src="https://wx.qlogo.cn/mmopen/vi_32/DYAIOgq83eo46M9mv1t2cib4qj2s1qZqoNwrj7hMEzKxAmn0E9vHsxubRv8Hfcr6Zkq4GLSCAh2W9NwNURHeYZQ/132"></image>
    </mp-cell>
  </mp-cells>
  <mp-cells>
    <mp-cell wx:for="{{ list }}">
      <!-- <image src="{{ item.avatarUrl }}" slot="icon" class="cell__icon"></image> -->
      <avatar
        slot="icon" 
        class="cell__icon"
        avatarUrl="{{ item.user.avatarUrl }}"
        nickName="{{ item.user.nickName }}"
        width="40px"
      ></avatar>
      <view>{{ item.user.nickName }}</view>
      <view class="cell-footer {{ item.num > 0 ? 'collect' : 'pay' }}" slot="footer">
        <text>{{ item.num > 0 ? '应收' : '应付' }}</text>
        <text>¥{{ item.num > 0 ? item.num : -item.num }}</text>
      </view>
    </mp-cell>
  </mp-cells>
</view>
