.add-class-wrapper, .icons {
  display: flex;
  padding: 30rpx;
}

/* 顶部输入框 - 图标wrapper */
.add-class-wrapper .icon-wrapper {
  margin: 0;
}

.add-class__input {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 30rpx;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

/* 类型图标合集 */
.icons {
  display: flex;
  flex-wrap: wrap;
}
.icon-wrapper {
  width: 112rpx;
  height: 112rpx;
  padding: 12rpx;
  margin-right: calc((100vw - 120rpx * 4 - 60rpx)/3);
  margin-bottom: 30rpx;
  border: 4rpx solid transparent;
  box-sizing: border-box;
  flex-shrink: 0;
}
.icon-wrapper:nth-child(4n) {
  margin-right: 0;
}

.icon-selected {
  background: rgba(22, 194, 194, 0.6);
  border: 4rpx solid #16c2c2;
  border-radius: 5px;
}

/* 添加分类按钮 */
.add-class-btn {
  height: 100rpx;
  background: #16c2c2;
  /* background-image: linear-gradient(270deg, #FEC830 0%, #FFDE37 100%); */
  border-radius: 60rpx;
  font-size: 18px;
  line-height: 68rpx;
  color: #FFFFFF;
  letter-spacing: 0.22px;
  position: fixed;
  bottom: 80rpx;
  left: 30rpx;
}

.add-class-btn_active {
  background: #129b9b;
}