.container {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 60rpx;
  flex-direction: column;
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
}

.weather {
  width: 80rpx;
  font-size: 24rpx;
  text-align: center;
  align-self: flex-end;
}

.weather-icon {
  width: 80rpx;
  height: 80rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin: 100rpx auto 0;
}

.line {
  height: 1px;
  width: 100%;
  background: #CCCCCC;
  margin: 80rpx 0;
}

.h, .p {
  margin-bottom: 28px;
}


.p {
  color: #999999;
} 

.login-btn {
  border-radius: 25px;
  margin-top: 50rpx;
  padding: 12px 24px;
}