.container {
  padding-bottom: 120rpx;
}

.banner {
  height: 160rpx;
  padding: 60rpx;
  background: var(--weui-BRAND);
  color: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.banner__item-name {
  font-size: 22px;
}

.weui-cells__group {
  padding-bottom: 120rpx;
}

.member-list__title {
  padding: 16px;
}

/* 退出按钮 */
.quit-btn {
  padding: 1px 10px;
  border: 1px solid rgba(0, 0, 0, 0.5);
  border-radius: 20px;
}

/* 邀请好友按钮 */
.invite-btn {
  width: 100%;
  text-align: left;
  font-weight: normal;
}

/* 弹窗 - input */
.dialog-input {
  background: #CCCCCC;
  height: 80rpx;
  line-height: 1;
}