.weui-cells, .sign-out-button {
  margin-top: 30rpx;
}

/* 用户头像 */

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 16px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

/* 退出登录cell */
.weui-btn_cell {
  margin-top: 30rpx;

  position: relative;
}

.weui-btn_cell::before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 2px;
  color: rgba(0, 0, 0, 0.1);
  z-index: 2;
  top: 0;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.weui-btn_cell::after {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 2px;
  color: rgba(0, 0, 0, 0.1);
  z-index: 2;
  bottom: 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
